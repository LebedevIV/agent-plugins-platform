{
  "manifest_version": 3,
  "name": "SidePanel Minimal Test",
  "version": "1.0.0",
  "description": "Минимальное расширение для теста штатного открытия боковой панели.",
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Открыть боковую панель",
    "default_icon": "logo.svg"
  },
  "icons": {
    "128": "logo.svg"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "sidePanel",
    "storage"
  ]
}